{
  "name": "vernwallet-bridge",
  "version": "1.0.0",
  "description": "Integrated Bitcoin-Starknet Bridge System",
  "main": "backend/src/index.js",
  "scripts": {
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "start": "npm run backend:start",
    "build": "npm run contracts:build && npm run frontend:build",
    "test": "npm run contracts:test && npm run backend:test && npm run frontend:test",
    "lint": "npm run contracts:lint && npm run backend:lint && npm run frontend:lint",
    "clean": "npm run contracts:clean && npm run frontend:clean",
    "contracts:install": "cd contracts && scarb install",
    "contracts:build": "cd contracts && scarb build",
    "contracts:test": "cd contracts && snforge test",
    "contracts:clean": "cd contracts && scarb clean",
    "contracts:deploy": "node scripts/deploy-contracts.js",
    "contracts:verify": "node scripts/verify-contracts.js",
    "backend:dev": "cd backend && npm run dev",
    "backend:start": "cd backend && npm run start",
    "backend:test": "cd backend && npm run test",
    "backend:lint": "cd backend && npm run lint",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:start": "cd frontend && npm run start",
    "frontend:build": "cd frontend && npm run build",
    "frontend:test": "cd frontend && npm run test",
    "frontend:lint": "cd frontend && npm run lint",
    "frontend:clean": "cd frontend && npm run clean",
    "setup": "npm run contracts:install && npm run backend:install && npm run frontend:install",
    "postinstall": "npm run setup"
  },
  "keywords": [
    "bitcoin",
    "starknet",
    "bridge",
    "blockchain",
    "cairo",
    "web3"
  ],
  "author": "VernWallet Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vernwallet/bridge"
  },
  "bugs": {
    "url": "https://github.com/vernwallet/bridge/issues"
  },
  "homepage": "https://vernwallet.com",
  "dependencies": {
    "axios": "^1.12.2",
    "starknet": "^7.6.4",
    "ws": "^8.18.3"
  }
}
