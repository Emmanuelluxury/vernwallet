# VernWallet Bridge Configuration
# Copy this file to .env and fill in your actual values

# Environment
NODE_ENV=development

# API Configuration
PORT=3001
HOST=localhost
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/vernwallet_bridge

# Bitcoin Network Configuration
BITCOIN_NETWORK=mainnet
BITCOIN_RPC_URL=http://localhost:8332
BITCOIN_RPC_USER=your_rpc_username
BITCOIN_RPC_PASSWORD=your_rpc_password
BITCOIN_GENESIS_HASH=000000000019d6689c085ae165831e934ff763ae46a2a6c172b3f1b60a8ce26f
BITCOIN_NETWORK_MAGIC=f9beb4d9

# Starknet Network Configuration
STARKNET_NETWORK=sepolia
STARKNET_CHAIN_ID=SN_SEPOLIA
STARKNET_RPC_URL=https://starknet-sepolia.public.blastapi.io/rpc/v0.7
STARKNET_ACCOUNT_ADDRESS=your_starknet_account_address
STARKNET_PRIVATE_KEY=your_starknet_private_key
STARKNET_EMERGENCY_ADMIN_ADDRESS=your_emergency_admin_address

# Contract Addresses (will be populated after deployment)
STARKNET_BRIDGE_CONTRACT_ADDRESS=
STARKNET_SBTC_CONTRACT_ADDRESS=
STARKNET_OPERATOR_REGISTRY_ADDRESS=
STARKNET_BTC_DEPOSIT_MANAGER_ADDRESS=
STARKNET_BTC_PEG_OUT_ADDRESS=
STARKNET_ESCAPE_HATCH_ADDRESS=

# Bridge Configuration
BRIDGE_MIN_DEPOSIT_AMOUNT=100000000
BRIDGE_MAX_DEPOSIT_AMOUNT=100000000000000000000000000000000
BRIDGE_DAILY_LIMIT=1000000000000000000000000000000000
BRIDGE_MIN_OPERATOR_BOND=1000000000000000000000
BRIDGE_CONFIRMATIONS_REQUIRED=6
BRIDGE_DEPOSIT_TIMEOUT=86400
BRIDGE_WITHDRAWAL_TIMEOUT=259200

# Staking Configuration
STAKING_ENABLED=true
STAKING_REWARD_RATE=1000000000000000000
STAKING_REWARDS_ENABLED=true

# Security Configuration
EMERGENCY_PAUSE_ENABLED=true
RATE_LIMIT_PER_MINUTE=10

# Fee Configuration (in satoshis)
DEPOSIT_FEE=10000
WITHDRAWAL_FEE=20000
STAKING_FEE=5000

# Logging
LOG_LEVEL=debug
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Monitoring
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true

# Operator Configuration
OPERATOR_QUORUM=3
MAX_OPERATORS=100

# Initial Operators (comma-separated list of operator addresses)
INITIAL_OPERATORS=